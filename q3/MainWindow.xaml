<Window x:Class="q3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:q3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
        <TextBox x:Name="userResult" HorizontalAlignment="Left" Height="23" Margin="241,78,0,0" TextWrapping="Wrap" Text="{Binding url}" VerticalAlignment="Top" Width="350"/>
        <Label Content="URL:" FontSize="15" HorizontalAlignment="Left" Margin="180,-27,0,0" VerticalAlignment="Top"/>
        <Label Content="Size:" FontSize="15" Margin="180,0,557.6,200"/>
            <TextBlock x:Name="resultTxtBlock" TextWrapping="Wrap" Text="{Binding UrlResult.Result}"  Margin="242,-100,401.6,10" Width="150" VerticalAlignment="Top" Height="20" />
        <Button  x:Name="pressToStartBtn" FontSize="14" Content="START" Width="100" Padding="10,0,5,0" HorizontalContentAlignment="Center" Click="Button_Click"/>
            <!-- Second option is: Command="{Binding MyDelegate}" -->

        </StackPanel>
    </Grid>
</Window>
