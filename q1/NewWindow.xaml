<Window x:Class="q1.NewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:q1"
        mc:Ignorable="d"
        Title="NewWindow" Height="450" Width="800" Background="Azure">
    <Grid>
        <StackPanel>
        <TextBlock x:Name="heightView" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="{Binding}" VerticalAlignment="Top" Height="103" Width="353" Foreground="Red"/>
            <TextBlock x:Name="widthView" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="{Binding}" VerticalAlignment="Top" Height="103" Width="353" Foreground="LightPink"/>
            <TextBlock x:Name="textView" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="{Binding}" VerticalAlignment="Top" Height="103" Width="353" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
